<div class="filePage">
<div class="container">
    <div class="row">
        <section class="fileSpace col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
            <h4><img src="{{ owner.avatarUri }}" alt="Author avatar" class="img-rounded userAvatarFile"> {{ owner.email }}</h4>
            <img 
                class="
                img-responsive center-block
                {% if file.fileAvatar.type == 'default' %} 
                    fileImageDefault
                {% elseif file.fileAvatar.type == 'supported' %}
                    fileImageSupported
                {% endif %}
                "
                src="
                {{ file.fileAvatar.url }}
                " 
                alt="File type pic"
                >
            <div class="buttonsFilePage center-block">
                <a href="{{ file.url }}" download>
                    <button type="button" class="btn btn-default btn-lg">
                        <span class="glyphicon glyphicon-cloud-download" aria-hidden="true"></span> Download
                    </button>
                </a>
            </div>
            <ul class="fileInfoList list-inline">
                <li>Uploaded: {{ file.created }}</li>
                <li>Size: {{ file.size }} Mb</li>
            </ul>
        </section>
    </div>
</div>
</div>
</div>