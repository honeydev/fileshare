<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title }}</title>
</head>
<body>
<div class="dndWrap" id="dndWrap">
<p class="dndMessage" id="dndMessage">Just Drop File Here</p>
    <div class="dndSpace" id="dndSpace">
    </div>
</div>
<header>
    {% include 'navigation_panel.twig' %}
    {% include 'flash_message.html' %}
</header>
<main>
    {% if page == 'main_page' %}
        {% include 'upload_section.twig' %}
    {% elseif page == 'browse' %}
        {% include 'browse.twig' %}
    {% elseif page == '500' %}
        {% include '500.twig' %}
    {% elseif page == 'file' %}
        {% include 'file.twig' %}
    {% endif %}
</main>
    {% if page == 'file' %}
        <script src="{{hostname}}/js/public/common.js"></script>
    {% else %}
        <script src="{{hostname}}/js/public/main.js"></script>
    {% endif %}
</body>
</html>